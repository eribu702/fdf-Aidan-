set		nocompatible

filetype    		on
filetype	plugin	on
filetype	indent	on
syntax  			on
colorscheme    molokai

set		number
set		cursorline
set		cursorcolumn
set		shiftwidth=4
set		tabstop=4
set		noexpandtab
set		nobackup
set		scrolloff=10
set		textwidth=80
set		wrap
set		ruler
set		incsearch
set		ignorecase
set		smartcase
set		showcmd
set		showmode
set		showmatch
set		hlsearch
set		history=100
set 	list
set 	listchars=tab:â”‚\ 

set		wildmenu
set		wildmode=list:longest
set		wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.exe,*.flv,*.flv,*.img,*.xlsx


imap <F2> <ESC>:w<CR>i
